<h4>New Post</h4>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.label :categories, "Choose an Existing Category" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br><br>

  <%= f.fields_for :categories, Category.new do |category_builder| %>
    <%= category_builder.label :name, "New Category: " %>
    <%= category_builder.text_field :name %><br><br>
  <% end %>

  <%= f.submit %>
<% end %>
